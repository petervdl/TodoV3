<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	tools:context="${packageName}.${activityClass}">


	<TextView android:id="@+id/textLabel" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_alignParentTop="true"
		android:layout_marginTop="15dp" android:layout_marginLeft="15dp"
		android:ems="10" android:text="@string/edititem" android:textSize="20sp" />

	<EditText android:id="@+id/editItem" android:inputType="textMultiLine"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_alignParentLeft="true" android:layout_below="@+id/textLabel"
		android:layout_marginLeft="37dp" android:layout_marginTop="19dp"
		android:ems="10">
		<requestFocus />
	</EditText>

	<Button android:id="@+id/btnEditItem" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_alignLeft="@+id/textLabel"
		android:layout_below="@+id/editItem" android:layout_marginTop="50dp"
		android:text="@string/save"    android:onClick="handlePress" />

</RelativeLayout>